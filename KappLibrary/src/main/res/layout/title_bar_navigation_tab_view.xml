<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@color/color_theme">

    <ImageButton
        android:id="@+id/back_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/btn_click_effect_styles"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@mipmap/icon_common_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <com.kapp.library.widget.MixedTextDrawView
            android:id="@+id/mixed_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:backgroundLight="@drawable/mixed_course_order_left_unpress_style"
            app:background="@drawable/mixed_course_order_left_pressed_style"
            app:checked="true"
            app:paddingBottom="@dimen/dp_5"
            app:paddingLeft="@dimen/dp_10"
            app:paddingRight="@dimen/dp_10"
            app:paddingTop="@dimen/dp_5"
            app:textColor="@color/white"
            app:textColorLight="@color/color_theme"
            app:textSize="@dimen/sp_16" />

        <com.kapp.library.widget.MixedTextDrawView
            android:id="@+id/mixed_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:backgroundLight="@drawable/mixed_course_order_right_unpress_style"
            app:background="@drawable/mixed_course_order_right_pressed_style"
            app:checked="false"
            app:paddingBottom="@dimen/dp_5"
            app:paddingLeft="@dimen/dp_10"
            app:paddingRight="@dimen/dp_10"
            app:paddingTop="@dimen/dp_5"
            app:textColor="@color/white"
            app:textColorLight="@color/color_theme"
            app:textSize="@dimen/sp_16" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/right_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@drawable/item_click_effect_styles"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/right2_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/right_ibtn"
        android:background="@drawable/item_click_effect_styles"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@drawable/item_click_effect_styles"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"/>

    <View
        android:id="@+id/horiz_line"
        style="@style/base_horiz_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
