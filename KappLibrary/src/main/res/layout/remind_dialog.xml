<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center"
            android:text="提示"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <View
            android:id="@id/controls"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0d5"
            android:layout_below="@id/title_tv"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/controls"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:minHeight="@dimen/dp_60"
            android:maxHeight="@dimen/dp_305"
            android:gravity="center"
            android:text="这是内容"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_16" />

        <View
            android:id="@id/controls1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0d5"
            android:layout_below="@id/message_tv"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/controls1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="取消"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/line_view"
                android:layout_width="@dimen/dp_0d5"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/enter_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="确定"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>